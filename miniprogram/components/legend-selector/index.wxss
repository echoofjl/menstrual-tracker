.legend-container {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #555;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
}

.legend-item.active {
  background-color: #f0f0f0;
}

.color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

/* 页面根容器 */
.calendar-page {
  padding: 32rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

.phase-legend {
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid #eee;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #555;
}

.color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ccc;
}
